{
  "author": {
    "email": "dylarcher@gmail.com",
    "name": "Dylan Archer",
    "url": "https://github.com/dylarcher"
  },
  "bugs": {
    "url": "https://github.com/dylarcher/legacyconcierge/issues"
  },
  "description": "Our concierge nurses provide comprehensive, bespoke care, from post-surgical recovery and chronic condition management to wellness optimization and palliative support. With 24/7 coordination and clinical oversight, we ensure your health is managed with precision and compassion, wherever you are.",
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@lhci/cli": "0.15.1",
    "@playwright/test": "1.56.1",
    "@vitest/coverage-v8": "4.0.4",
    "@vitest/ui": "4.0.4",
    "happy-dom": "20.0.8",
    "lighthouse": "13.0.1",
    "markdownlint-cli2": "0.18.1",
    "playwright": "1.56.1",
    "typescript": "5.9.3",
    "vitest": "4.0.4"
  },
  "engines": {
    "node": ">=22",
    "npm": ">=10"
  },
  "homepage": "https://github.com/dylarcher/legacyconcierge#readme",
  "keywords": [
    "healthcare",
    "nursing",
    "in-home-care",
    "end-of-life-care",
    "static-site",
    "i18n",
    "accessibility",
    "wcag"
  ],
  "license": "ISC",
  "main": "src/index.html",
  "name": "legacy-concierge",
  "overrides": {
    "glob": "^11.0.0",
    "inflight": "npm:@badgateway/inflight@^1.0.0",
    "rimraf": "^6.0.1",
    "tmp": "^0.2.4",
    "ws": {
      ".": "^8.18.0",
      "bufferutil": "^4.0.8",
      "utf-8-validate": "^6.0.4"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dylarcher/legacyconcierge.git"
  },
  "scripts": {
    "dev": "python3 -m http.server 8000",
    "start": "npm run dev",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:e2e:report": "playwright show-report",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "lint:md": "markdownlint-cli2 '**/*.md'",
    "lint:md:fix": "markdownlint-cli2 '**/*.md' --fix",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "type-check": "tsc --noEmit",
    "types:generate": "tsc --declaration --emitDeclarationOnly --allowJs --outDir types --skipLibCheck true --noImplicitAny false --strictNullChecks false",
    "lighthouse": "lhci autorun",
    "lighthouse:quick": "lighthouse http://localhost:8000 --view --preset=desktop",
    "changelog": "node scripts/generate-changelog.js",
    "changelog:dry-run": "node scripts/generate-changelog.js --dry-run",
    "validate": "npm run format:check && npm run lint && npm run type-check",
    "validate:fix": "npm run format && npm run lint:fix && npm run check:fix",
    "ci": "npm run validate && npm run test:unit && npm run test:e2e"
  },
  "type": "module",
  "version": "1.0.0"
}
