{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./common/*"],
      "#/*": ["./shared/*"],
      "$/*": ["./pages/*"]
    }
  },
  "include": ["**/*"],
  "exclude": [
    "**/*.d.ts",
    "**/*.spec.*",
    "**/*.test.*",
    "bin/",
    "dist/",
    "node_modules/",
    "tests/",
    "coverage/",
    ".vscode/",
    ".tmp/",
    ".claude/"
  ]
}
